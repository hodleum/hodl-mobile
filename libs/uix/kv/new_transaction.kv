<New_Transaction>:
    name: 'new_transaction'

    FloatLayout:
        Label:
            font_size: '18sp'
            text_size:self.size
            halign: 'left'
            valign:'middle'
            pos_hint: {'x':0.05,'y':0.85}
            size_hint:0.3,0.1
            color: 0, 0, 0, 1
            text:
                app.translation._('Total amount:')
        Label:
            font_size: '18sp'
            text_size:self.size
            halign: 'left'
            valign:'middle'
            pos_hint: {'x':0.35,'y':0.85}
            size_hint:0.3,0.1
            color: 0, 0, 0, 1
            text:
                app.translation._('0.00 HDL')
        BoxLayout:
            pos_hint: {'x':0.05,'y':0.7}
            size_hint:0.4,0.1
            Label:
                font_size: '18sp'
                color: 0, 0, 0, 1
                text:
                    app.translation._('To:')
                text_size:self.size
                halign: 'left'
                valign:'middle'
            Label:
                color: 0, 0, 0, 1
                text:
                    app.translation._('Puten')
                text_size:self.size
                halign: 'left'
                valign:'middle'
        MDRaisedButton:
            text:'choose\nfrom contacts'
            on_release:
                app.show_choose_from_contacts()
            pos_hint: {'x':0.45,'y':0.7}
            size_hint:0.5,0.1
        Label:
            font_size: '18sp'
            color: 0, 0, 0, 1
            text:
                app.translation._('Amount:')
            pos_hint: {'x':0.05,'y':0.5}
            size_hint:0.25,0.1
            text_size:self.size
            halign: 'left'
            valign:'middle'
        TextInput:
            id:Transaction_amount
            hint_text:'amount'
            hint_text_color:0,0,0,1
            cursor_color:0,0,0,1
            input_filter:'float'
            pos_hint: {'x':0.35,'y':0.5}
            size_hint:0.4,0.1
        Label:
            font_size: '18sp'
            color: 0, 0, 0, 1
            text:
                app.translation._('HDL')
            pos_hint: {'x':0.81,'y':0.5}
            size_hint:0.1,0.1
        MDRaisedButton:
            text:'OK'
            on_release:
            pos_hint: {'x':0.7,'y':0.3}
            size_hint:0.16,0.09
            on_press:
                root.printTransaction_amount(Transaction_amount.text)


























































