<StartScreen>

    orientation: 'horizontal'


    NavDrawer:
        id: nav_drawer

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(5)

            Toolbar:
                id: action_bar
                background_color: app.theme_cls.primary_color
                title: app.translation._('Main')
                left_action_items: [['menu', lambda x: nav_drawer._toggle()]]
                elevation: 10
                md_bg_color: app.theme_cls.primary_color

            ScreenManager:
                id: manager

                BaseScreen:
                    id: base

                License:
                    id: license

                About:
                    id: about

                Set:
                    id: set

                Network:
                    id:network

                Trade:
                    id:trade

                Contacts:
                    id:contacts

                BaseScreen:
                    id:base










