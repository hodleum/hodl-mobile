    FloatLayout:
        Label:
            text_size:self.size
            halign: 'center'
            valign:'middle'
            font_size: '18sp'
            color: 0, 0, 0, 1
            text:
                app.translation._('current prise: 0.2')
            pos_hint: {'x':0.05,'y':0.85}
