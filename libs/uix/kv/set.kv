<Set>:
    name: 'set'

    FloatLayout:
        BoxLayout:
        MDRaisedButton:
            pos_hint: {'x':0.05,'y':0.8}
            size_hint:0.7,0.1
            text:"Choose theme \n (Current: " + app.theme_cls.theme_style + "," + app.theme_cls.primary_palette + ")"
            on_press:
                app.show_popup()
        BoxLayout:
            pos_hint: {'x':0.05,'y':0.7}
            size_hint:0.9,1
            Label:
                font_size: '18sp'
                text_size:self.size
                halign:'left'
                valign:'middle'
                color: (0,0,0,1)  if app.theme_cls.theme_style == 'Light' else (1,1,1,1)
                text:'Night mode'
                size_hint:0.3,0.1
            MDSwitch:
                size_hint: None, None
                size: dp(36), dp(48)
                on_active: False
                on_active: app.theme_cls.theme_style = 'Dark'  if app.theme_cls.theme_style == 'Light' else 'Light'

        Label:
            font_size: '18sp'
            text_size:self.size
            halign:'left'
            valign:'middle'
            color:0,0,0,1
            text:'Using of storage for storage mining: (MB)'
            pos_hint: {'x':0.05,'y':0.2}
            size_hint:0.9,0.1
        TextInput:
            background:(1,1,1)  if app.theme_cls.theme_style == 'Light' else (0.188,0.188,0.188)
            id:storage_for_storage_mining
            hint_text:'0.00'
            hint_text_color:0,0,0,1
            cursor_color:0,0,0,1
            input_filter:'float'
            pos_hint: {'x':0.05,'y':0.2}
            size_hint:0.9,0.1
        MDRaisedButton:
            text:'change settings'
            pos_hint: {'x':0.05,'y':0.02}
            size_hint:0.9,0.1
            on_press:
                root.printStorage_for_storage_mining(storage_for_storage_mining.text)
