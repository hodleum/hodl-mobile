<Set>:
    name: 'set'

    FloatLayout:
        MDRaisedButton:
            pos_hint: {'x':0.1,'y':0.8}
            size_hint:0.5,0.1
            text:'Choose Theme'
            on_press:
                app.show_popup()
        Label:
            font_size: '18sp'
            text_size:self.size
            halign:'left'
            valign:'middle'
            color:0,0,0,1
            text:'Using of storage for storage mining: (MB)'
            pos_hint: {'x':0.05,'y':0.2}
            size_hint:0.9,0.1
        TextInput:
            id:storage_for_storage_mining
            hint_text:'0.00'
            hint_text_color:0,0,0,1
            cursor_color:0,0,0,1
            input_filter:'float'
            pos_hint: {'x':0.05,'y':0.2}
            size_hint:0.9,0.1
        MDRaisedButton:
            text:'change settings'
            pos_hint: {'x':0.05,'y':0.02}
            size_hint:0.9,0.1
            on_press:
                root.printStorage_for_storage_mining(storage_for_storage_mining.text)
