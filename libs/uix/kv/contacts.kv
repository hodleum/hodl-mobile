#:import label kivy.uix.label
#:import sla kivy.adapters.simplelistadapter



<Contacts>:
    name:'contacts'
    ListView:
        background_color:0,0,0,1
        id:contacts_view
        pos_hint: {'x':0.05,'y':0.15}
        size_hint:0.9,0.8
        adapter:
            sla.SimpleListAdapter(
            data=["{0}".format(i) for i in ['hggghfgh','jjrjrjmrqimf','rmekmekf']*50],
            cls=label.Label
            )
    MDRaisedButton
        pos_hint: {'x':0.05,'y':0.05}
        size_hint:0.9,0.1
        front_size: '20sp'
        text:' find new contact'
        on_release:
            app.show_find_new_contact()