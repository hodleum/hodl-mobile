                app.translation._('Invoices:')
            pos_hint: {'x':0.05,'y':0.35}
            size_hint:0.9,0.1
        Label:
            font_size: '18sp'
            text_size:self.size
            halign: 'left'
            valign:'middle'
            color: 0, 0, 0, 1
            text:
                app.translation._('My smart contracts:')
            pos_hint: {'x':0.55,'y':0.35}
            size_hint:0.4,0.1




































