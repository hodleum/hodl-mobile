<BaseScreen>:
    name: 'base'

    FloatLayout:
        canvas:
            Color:
                rgb:0,0,0
            Rectangle:
                pos: root.width*0.05,root.height*0.55
                size: root.width*0.4,root.height*0.3
            Color:
                rgb: 1,1,1
            Rectangle:
                pos: root.width*0.05+2,root.height*0.55+2
                size: root.width*0.4-4,root.height*0.3-4
            Color:
                rgb:0,0,0
            Rectangle:
                pos: root.width*0.05,root.height*0.05
                size: root.width*0.4,root.height*0.32
            Color:
                rgb: 1,1,1
            Rectangle:
                pos: root.width*0.05+2,root.height*0.05+2
                size: root.width*0.4-4,root.height*0.32-4
            Color:
                rgb:0,0,0
            Rectangle:
                pos: root.width*0.55,root.height*0.05
                size: root.width*0.4,root.height*0.32
            Color:
                rgb: 1,1,1
            Rectangle:
                pos: root.width*0.55+2,root.height*0.05+2
                size: root.width*0.4-4,root.height*0.32-4
