            text:
                app.translation._('Total amount of DVT: 5.')
            pos_hint: {'x':0.07,'y':0.85}
            size_hint:0.9,0.1
        Label:
            font_size: '18sp'
            text_size:self.size
            halign: 'left'
            valign:'middle'
            color: (0,0,0,1)  if app.theme_cls.theme_style == 'Light' else (0.8,0.8,0.8)
            text:
                app.translation._('prise: 0.2 HDL')
            pos_hint: {'x':0.07,'y':0.75}
            size_hint:0.9,0.1
        Label:
            font_size: '18sp'
            text_size:self.size
            halign: 'left'
            valign:'middle'
