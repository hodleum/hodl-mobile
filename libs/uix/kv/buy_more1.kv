                rgb: (1,1,1)  if app.theme_cls.theme_style == 'Light' else (0.188,0.188,0.188)
            Rectangle:
                pos: root.width*0.05+2,root.height*0.65+2
                size: root.width*0.9-4,root.height*0.3-4
        Label:
            font_size: '18sp'
            text_size:self.size
            halign: 'left'
            valign:'middle'
