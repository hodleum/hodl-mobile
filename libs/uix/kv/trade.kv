#:import MDRaisedButton kivymd.button.MDRaisedButton
#:import MDFlatButton kivymd.button.MDFlatButton
#:import MDList kivymd.list.MDList

<Trade>:
    name: 'trade'

    BoxLayout:
        orientation:'vertical'

        Label:
            color: 0, 0, 0, 1
            font_size: '20sp'
            text:'Total: 6 HDL'
            size_hint_x: None
            width: 150

        BoxLayout:
            spacing:50

            Label:
                color: 0,0,0,1
                text:'5 HDL'
                size_hint_x: None
                width: 250
                size_hint_y: None
                height: 50
            MDRaisedButton:
                text:'Buy tokens'
                on_release:
                    app.show_buy_new_tokens()
        Label:
            color: 0, 0, 0, 1
            font_size: '20sp'
            text: 'Tokens, balance and prise:'
            size_hint_x: None
            width: 270

        BoxLayout:
            padding:15
            spacing:80

            MDRaisedButton:
                text:'5 DVT'
                on_release:
                    app.show_tokens_info()
            Label:
                color: 0,0,0,1
                text:'0.2'
                size_hint_x: None
                width: 80
                size_hint_y: None
                height: 40
            MDRaisedButton:
                text:'Sell'
                on_release:app.show_sell1()
            MDRaisedButton:
                text:'Buy more'
                on_release:app.show_buy_more1()

        Widget:
        Widget:
        Widget:

